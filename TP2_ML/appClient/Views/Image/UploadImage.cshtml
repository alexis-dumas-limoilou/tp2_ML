@model appClient.Models.Image

@{
    ViewData["Title"] = "UploadImage";
}

<h1>UploadImage</h1>

<h4>Image</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="UploadImage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label asp-for="ImageData" class="control-label"></label>
                <input type="file" asp-for="ImageData" class="form-control" accept=".png, .gif, .jpeg, .jpg, .webp" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <input type="submit" value="Envoyer l'image" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
